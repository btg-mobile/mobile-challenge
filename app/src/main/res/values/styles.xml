<resources>

    <style name="DefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/size_small</item>
    </style>

    <style name="MessageDialog">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/size_normal</item>
    </style>

    <style name="TitleText.Light">
        <item name="android:textColor">@color/ice</item>
    </style>

    <style name="TitleText.Dark">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="TermosUso">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/size_small</item>
    </style>

    <style name="CurrencyConversionValue">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/size_default</item>
    </style>

    <style name="LabelField">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="LabelField.Dark">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="LabelField.Blue">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_small</item>
    </style>

    <style name="LabelField.Light">
        <item name="android:textColor">@color/ice</item>
    </style>

    <style name="EdittextField">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/size_normal</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">@dimen/size_normal</item>
    </style>

    <style name="ButtonYellowAlertDialog" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/rounded_yellow</item>
        <item name="android:textColor">@color/ice</item>
    </style>

</resources>