<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActivityText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorIvoryBlack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ActivityTextResult">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorIvoryBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLength">8</item>
    </style>
    <style name="ActivityTextFilter">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorIvoryBlack</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorIvoryBlack</item>
        <item name="android:textColorHint">@color/colorGreyBlack</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLength">8</item>
    </style>

    <style name="ButtonCoin">
        <item name="android:backgroundTint">@color/colorSummerSkyBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonResult">
        <item name="android:backgroundTint">@color/colorPrussianBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>