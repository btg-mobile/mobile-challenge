<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_currency_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    tools:cardElevation="@dimen/card_recycler_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="15"
            android:background="@color/backgroundColor"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/item_currency_code_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/design_default_color_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                tools:text="@string/item_currency_code_tv" />

            <TextView
                android:id="@+id/item_currency_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="center"
                android:textColor="@color/design_default_color_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="@string/item_currency_name_tv" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>