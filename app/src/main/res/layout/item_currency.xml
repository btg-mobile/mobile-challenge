<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_lista_moeda_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    tools:cardCornerRadius="@dimen/card_recycler_corner_radius"
    tools:cardElevation="@dimen/card_recycler_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="52dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_currency_iv_flag"
            android:layout_weight="3"
            android:layout_width="0dp"
            tools:src="@drawable/flag_unk"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
        </ImageView>

        <LinearLayout
            android:layout_weight="17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="right">

            <TextView
                android:id="@+id/item_currency_tv_code"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="@string/item_currency_tv_code"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/item_currency_tv_name"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                tools:text="@string/item_currency_tv_name"
                android:textSize="14dp"
                android:textColor="@color/colorAccent" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
