<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="br.com.vicentec12.mobilechallengebtg.ui.home.HomeViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.home.HomeActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_from_currency"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_spacing"
                android:hint="@string/from"
                app:layout_constraintEnd_toStartOf="@id/btn_convert_from"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:prefixText="@{viewModel.currencyFrom}">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="@={viewModel.currencyFromValue}"
                    android:textDirection="rtl" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_convert_from"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/minor_spacing"
                android:layout_marginEnd="@dimen/default_spacing"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_update"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintBottom_toBottomOf="@id/til_from_currency"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/til_from_currency" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_to_currency"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_spacing"
                android:hint="@string/to"
                app:layout_constraintEnd_toStartOf="@id/btn_convert_to"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_from_currency"
                app:prefixText="@{viewModel.currencyTo}">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:text="@={viewModel.currencyToValue}"
                    android:textDirection="rtl" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_convert_to"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/minor_spacing"
                android:layout_marginEnd="@dimen/default_spacing"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_update"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintBottom_toBottomOf="@id/til_to_currency"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/til_to_currency" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_convert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_spacing"
                android:layout_marginBottom="@dimen/default_spacing"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/convert"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_to_currency"
                app:layout_constraintVertical_bias="1" />

            <ProgressBar
                android:id="@+id/pgb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_spacing"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_to_currency"
                app:layout_constraintVertical_bias="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>