<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.main.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/mainSr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Text.Default.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:text="@string/origin_currency" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    app:cardCornerRadius="@dimen/default_card_elevation"
                    app:cardElevation="@dimen/default_card_elevation">

                    <TextView
                        android:id="@+id/originTv"
                        style="@style/Text.Default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_arrow_down_24"
                        android:padding="@dimen/default_padding"
                        tools:text="BRL" />
                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/Text.Default.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:text="@string/currency_destiny" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    app:cardCornerRadius="@dimen/default_card_elevation"
                    app:cardElevation="@dimen/default_card_elevation">

                    <TextView
                        android:id="@+id/destinyTv"
                        style="@style/Text.Default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_arrow_down_24"
                        android:padding="@dimen/default_padding"
                        tools:text="BRL" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/amountLabelTv"
                    style="@style/Text.Default.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:labelFor="@id/amountTv"
                    android:text="@string/value_to_convert"
                    android:visibility="gone" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/amountCv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/default_card_elevation"
                    app:cardElevation="@dimen/default_card_elevation">

                    <EditText
                        android:id="@+id/amountTv"
                        style="@style/Text.Default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="0123456789,"
                        android:imeOptions="actionDone"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:padding="@dimen/default_padding"
                        tools:text="BRL" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/resultValueLabelTv"
                    style="@style/Text.Default.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:text="@string/converted_value"
                    android:visibility="gone" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/resultValueCv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/default_card_elevation"
                    app:cardElevation="@dimen/default_card_elevation">

                    <TextView
                        android:id="@+id/resultValueTv"
                        style="@style/Text.Default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_padding"
                        tools:text="BRL" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/lastUpdateTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_padding"
                    android:text="@string/last_update"
                    android:textAlignment="center"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/convertBtn"
                    style="@style/Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:enabled="false"
                    android:text="@string/action_convert"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
