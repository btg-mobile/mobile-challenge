<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_currency_conversion_tv_initial_currency_value"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="@string/item_currency_conversion_tv_initial_currency_value"
                android:textSize="12dp"
                android:paddingRight="4dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:id="@+id/item_currency_conversion_iv_initial_currency_flag"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:src="@drawable/flag_unk"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
            </ImageView>

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_swap_horiz_24" />

            <ImageView
                android:id="@+id/item_currency_conversion_iv_final_currency_flag"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:src="@drawable/flag_unk"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
            </ImageView>

            <TextView
                android:id="@+id/item_currency_conversion_tv_final_currency_value"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingLeft="4dp"
                android:text="@string/item_currency_conversion_tv_final_currency_value"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/item_currency_conversion_tv_last_update_date"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="bottom|center"
                android:layout_gravity="center"
                android:text="@string/item_currency_conversion_tv_last_update_date"
                android:textSize="10dp"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/item_currency_conversion_tv_last_update_hour"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="top|center"
                android:layout_gravity="center"
                android:text="@string/item_currency_conversion_tv_last_update_hour"
                android:textSize="10dp"
                android:textColor="@color/colorAccent" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>

