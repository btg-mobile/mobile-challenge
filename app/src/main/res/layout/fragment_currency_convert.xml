<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CurrencyConvertFragment"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convertFromLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="De"
        android:textSize="20sp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convertToLabel"
        app:layout_constraintStart_toEndOf="@+id/convertFromLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Para"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convertFromBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/convertFromLabel"
        android:text="USD"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
        android:background = "@color/purple_500"
        android:textColor="@color/white"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convertToBtn"
        android:text="BRL"
        android:background = "@color/purple_500"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
        app:layout_constraintStart_toStartOf="@id/convertToLabel"
        app:layout_constraintTop_toBottomOf="@id/convertToLabel"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/amountLabel"
        android:text="Informe o valor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/convertFromBtn"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/amountEdt"
        app:layout_constraintTop_toBottomOf="@id/amountLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convertBtn"
        android:text="Converter"
        android:layout_marginTop="40dp"
        android:background = "@color/purple_500"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amountEdt"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountConverted"
        android:layout_marginTop="40dp"
        tools:text="50.3"
        android:text="50.3"
        android:textSize="100sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/convertBtn"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountCode"
        android:layout_marginTop="40dp"
        tools:text="BRL"
        android:text="BRL"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/amountConverted"
        app:layout_constraintStart_toEndOf="@id/amountConverted"
        app:layout_constraintBottom_toBottomOf="@id/amountConverted"
        app:layout_constraintVertical_bias="0.8"/>





</androidx.constraintlayout.widget.ConstraintLayout>
